                  <tr>
                      <th style="width:25%">Color Name</th>
                      <th style="width:15%">HEX</th>
                      <th style="width:43%">Color</th>
                  </tr>

              <% group_colors.each do |color_name, color_code|%>
                  <tr>
                      <td><a target="_blank" href="#"><%= color_name %></a>&nbsp;</td>
                      <td><a target="_blank" href="#"><%= color_code %></a></td>
                      <td style="background-color:<%= color_code %>">&nbsp;</td>
                  </tr>
              <% end %>
          </tbody>
          <% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>Home page</title>
    <%= stylesheet_link_tag    "home_page/application", media: "all", 'data-turbolinks-track': 'reload'  %>
    <%= javascript_include_tag "home_page/application", 'data-turbolinks-track': 'reload'  %>
    <%= csrf_meta_tags %>
  </head>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Devise Demo', home_page.root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', home_page.root_path %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if moussaillon_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_moussaillon.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', home_page.edit_moussaillon_registration_path %></li>
                <li><%= link_to 'Log out', home_page.destroy_moussaillon_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Log In', home_page.new_moussaillon_session_path %></li>
            <li><%= link_to 'Sign Up', home_page.new_moussaillon_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <body>
    <div class="container">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
              <%= value %>
          </div>
        <% end %>
    </div>

    <%= yield :top_content %>

    <div class="container">
        <h1><%= yield :header %></h1>
      <%= yield %>
        </div>
  </body>
</html>

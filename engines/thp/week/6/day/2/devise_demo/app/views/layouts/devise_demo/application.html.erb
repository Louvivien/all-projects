<!DOCTYPE html>
<html>
<head>
  <title>Devise Demo</title>
  <%= stylesheet_link_tag    "devise_demo/application", media: "all" %>
  <%= javascript_include_tag "devise_demo/application" %>
  <%= csrf_meta_tags %>
</head>


  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Devise Demo', devise_demo.root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', devise_demo.root_path %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if !user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                render url
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', devise_demo.edit_user_registration_path %></li>
                <li><%= link_to 'Log out', devise_demo.destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Log In', devise_demo.new_user_session_path %></li>
            <li><%= link_to 'Sign Up', devise_demo.new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <body>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
        <%= value %>
        </div>
      <% end %>
    </div>
    <%= yield :top_content %>

    <div class="container">
        <h1><%= yield :header %></h1>
      <%= yield %>
    </div>
  </body>




  <ul class="nav navbar-nav">
  <li><%= link_to 'Home', devise_demo.root_path %></li>
  <% if user_signed_in? %>
    <li><%= link_to 'Secret', secret_path %></li>
  <% end %>
</ul>


</html>
